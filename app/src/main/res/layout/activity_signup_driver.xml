<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".SignupDriver">

    <View
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@drawable/bg_view" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:padding="35dp">

        <ImageView
            android:id="@+id/backBtnDriver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/baseline_arrow_back_ios_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserrat"
            android:paddingTop="50dp"
            android:text="CREATE DRIVER ACCOUNT"
            android:textAlignment="center"
            android:textAppearance="@style/Base.Theme.ByaheMoto"
            android:textColor="@color/white"
            android:textSize="34sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="704dp"
        android:layout_below="@id/topPanel"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="29dp"
        tools:ignore="ExtraText">

        <EditText
            android:id="@+id/emailDriver"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/custom_panel"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/baseline_alternate_email_24"
            android:drawablePadding="8dp"
            android:fontFamily="@font/montserrat_alternates_light"
            android:hint="Email"
            android:paddingLeft="18dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/fullNameDriver"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_panel"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/baseline_person_gray"
            android:drawablePadding="8dp"
            android:fontFamily="@font/montserrat_alternates_light"
            android:hint="Full Name"
            android:paddingLeft="18dp"
            android:textColor="@color/black" />

        <Spinner
            android:id="@+id/vehicle_type_spinner"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="right|end"
            android:layout_marginTop="10dp"
            android:paddingLeft="18dp"
            android:spinnerMode="dropdown" />

        <EditText
            android:id="@+id/usernameDriver"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_panel"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/baseline_drive_file_rename_outline_24"
            android:drawablePadding="8dp"
            android:fontFamily="@font/montserrat_alternates_light"
            android:hint="Username"
            android:paddingLeft="18dp"
            android:textColor="@color/black" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordDriver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:animateLayoutChanges="true"
            android:hint="Password"
            android:textColorHint="@color/field"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordDriver1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_panel"
                android:backgroundTint="@color/white"
                android:drawableStart="@drawable/baseline_lock_24"
                android:drawablePadding="12dp"
                android:fontFamily="@font/montserrat_alternates_light"
                android:inputType="textPassword"
                android:paddingRight="40dp"
                android:textColor="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/confirmPasswordDriver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="Confirm Password"
            android:textColorHint="@color/field"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/confirmPasswordDriver1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_panel"
                android:backgroundTint="@color/white"
                android:drawableStart="@drawable/baseline_lock_24"
                android:drawablePadding="12dp"
                android:fontFamily="@font/montserrat_alternates_light"
                android:inputType="textPassword"
                android:paddingRight="40dp"
                android:textColor="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/createAccDriver"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#0a9dea"
            android:fontFamily="@font/montserrat_alternates_semibold"
            android:text="Create Account"
            android:textSize="18sp"
            app:cornerRadius="50dp" />


    </LinearLayout>

</RelativeLayout>
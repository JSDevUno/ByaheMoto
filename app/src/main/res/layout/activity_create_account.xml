<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccount">

    <View
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@drawable/bg_view"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:padding="35dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="1dp"/>

        <ImageView
            android:id="@+id/menuBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_menu_24"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="1dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserrat"
            android:paddingTop="50dp"
            android:text="CREATE YOUR ACCOUNT"
            android:textAlignment="center"
            android:textAppearance="@style/Base.Theme.ByaheMoto"
            android:textColor="@color/white"
            android:textSize="34sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="704dp"
        android:layout_below="@id/topPanel"
        android:layout_gravity="bottom"
        android:background="@drawable/custom_panel"
        android:orientation="vertical"
        android:padding="29dp">

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/custom_panel"
            android:backgroundTint="#e8e8e8"
            android:drawableLeft="@drawable/baseline_alternate_email_24"
            android:drawablePadding="8dp"
            android:fontFamily="@font/montserrat_alternates_light"
            android:hint="Email"
            android:padding="8dp"
            android:textColor="@color/black" />
        <EditText
            android:id="@+id/fullName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_panel"
            android:backgroundTint="#e8e8e8"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="8dp"
            android:fontFamily="@font/montserrat_alternates_light"
            android:hint="FullName"
            android:padding="8dp"
            android:textColor="@color/black" />
        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_panel"
            android:backgroundTint="#e8e8e8"
            android:drawableLeft="@drawable/baseline_drive_file_rename_outline_24"
            android:drawablePadding="8dp"
            android:fontFamily="@font/montserrat_alternates_light"
            android:hint="Username"
            android:padding="8dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_panel"
            android:backgroundTint="#e8e8e8"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:drawablePadding="8dp"
            android:fontFamily="@font/montserrat_alternates_light"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColor="@color/black" />
        <EditText
            android:id="@+id/confirmpassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_panel"
            android:backgroundTint="#e8e8e8"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:drawablePadding="8dp"
            android:fontFamily="@font/montserrat_alternates_light"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColor="@color/black" />
        <Button
            android:id="@+id/createAcc"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#0a9dea"
            android:fontFamily="@font/montserrat_alternates_semibold"
            android:text="Create Account"
            android:textSize="18sp"
            app:cornerRadius="50dp" />
        <Button
            android:id="@+id/createPriority"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#0a9dea"
            android:fontFamily="@font/montserrat_alternates_semibold"
            android:text="Create Priority Account"
            android:textSize="18sp"
            app:cornerRadius="50dp" />
    </LinearLayout>

</RelativeLayout>